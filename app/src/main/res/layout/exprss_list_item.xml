<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/query_e_popbtn"
              android:gravity="top|center_horizontal"
              android:orientation="horizontal" >

    <TextView
            android:id="@+id/expressStatusTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="发起方案" >
    </TextView>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <LinearLayout
                android:id="@+id/leftLineUp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#cbc7cc" >
        </LinearLayout>

        <TextView
                android:id="@+id/leftCircle"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/query_express_detail_status_circle_before" />

        <LinearLayout
                android:id="@+id/leftLineDown"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#cbc7cc" >
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/expressStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/query_express_detail_status_before"
            android:textColor="#ffffff" >
    </TextView>

</LinearLayout>