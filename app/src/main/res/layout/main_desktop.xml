<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/desktopPager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></android.support.v4.view.ViewPager>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/homeContainer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desktop_home_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/main_desktab_gray" />

            <TextView
                android:id="@+id/desktop_home_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="主页"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/findContainer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desktop_find_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/main_desktop_find_gray" />

            <TextView
                android:id="@+id/desktop_find_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="活动"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/myContainer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/desktop_my_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/main_desktop_my_gray" />

            <TextView
                android:id="@+id/desktop_my_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="我的"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>